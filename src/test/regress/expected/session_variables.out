CREATE OR REPLACE FUNCTION taketext(str TEXT)
    RETURNS TEXT
AS
$$
BEGIN
    RETURN str || ' Append';
END;
$$ LANGUAGE plpgsql;
-- Call the same function with Different types
DO
$$
    DECLARE
        t TEXT;
    BEGIN
        FOR i IN 1..10
            LOOP
                IF i % 2 = 1 THEN
                    SET @x := 10.5; -- numeric
                ELSE
                    SET @x := 'Ahoj';
                END IF;
                SELECT taketext(@x) INTO t;
                RAISE NOTICE '%', t;
            END LOOP;
    END;
$$;
NOTICE:  10.5 Append
NOTICE:  Ahoj Append
NOTICE:  10.5 Append
NOTICE:  Ahoj Append
NOTICE:  10.5 Append
NOTICE:  Ahoj Append
NOTICE:  10.5 Append
NOTICE:  Ahoj Append
NOTICE:  10.5 Append
NOTICE:  Ahoj Append
DROP FUNCTION taketext;
