CREATE OR REPLACE PROCEDURE set_session_variables_param(a INT)
AS
$$
DECLARE
BEGIN
    SET @pl := 1 + a;
END;
$$ LANGUAGE plpgsql;
CALL set_session_variables_param(5);
SELECT @pl;
 @pl 
-----
   6
(1 row)

